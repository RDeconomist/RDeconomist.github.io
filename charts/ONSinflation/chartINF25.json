{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "title": {
      "text": "Inflation - G7 countries",
      "subtitle": "Source: OECD",
      "subtitleFontStyle":"italic",
      "subtitleFontSize":10,
      "anchor": "start",
      "color": "black"},

  "width":150,
  "height":150,

  "mark":{
      "type": "line",
      "smooth":false,
      "color":"rgb(0,112,192)",
      "strokeWidth":2,
      "opacity":1},

  "data": {
     "url": "https://raw.githubusercontent.com/RDeconomist/RDeconomist.github.io/main/charts/ONSinflation/data_OECD_inflation2.csv"},

 "transform": [
      {"calculate": "datum.Value/100", "as": "value"},
      {"calculate": "year(datum.TIME)", "as": "year"},

      {"filter":"datum.LOCATION!='JPN'"},

      {"filter": "datum.year>=minYear"},
      {"filter": "datum.year<=maxYear"}
  ],

     "params": [    
    {"name":"minYear", "value":1989,
      "bind":{
         "input": "range",
        "min": 1969, 
        "max": 2022, 
        "step": 1,
        "name": "Start year:"}},

  {"name":"maxYear", "value":2024,
     "bind":{
       "input": "range",
       "min": 1969, 
       "max": 2024, 
       "step": 1,
       "name": "End year:"}
  }
],    

 "encoding": {
    
    "x": {
        "field": "TIME",
        "type": "temporal",
        "title":null},
    
    "y": {
        "field": "value",
        "type": "quantitative",
        "title":null,
        "axis":{"format":"%"}},
    
    "facet":{
      "field":"LOCATION",
      "columns": 2,
      "title":null
    }
  }
}