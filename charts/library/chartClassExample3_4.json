            "axis": {
              "ticks": false,
              "labelPadding": 5,
              "title": null
            },
            "sort": "x"
          },
          "x": {
            "field": "diff",
            "type": "quantitative",
            "axis": {
              "title": "Deviation from gender parity",
              "ticks": false,
              "labelPadding": 5,
              "gridColor": {
                "expr": "datum.value == 0 ? 'black' : rgb(211,211,211,1)"
              }
            }
  
          },
          "color": {
            "condition": [
              {
                "test": "datum.diff < -0.035",
                "value": "rgb(69,141,198)"
              },
              {
                "test": "datum.diff > -0.035 && datum.diff <= 0.035",
                "value": "rgb(198,198,198)"
              },
              {
                "test": "datum.diff > 0.035",
                "value": "rgb(230,142,72)"
              }
            ],
            "field": "diff",
            "type": "quantitative",
            "legend": null
          }
        }
      },
      {
        "mark": {
          "type": "text"
        }
