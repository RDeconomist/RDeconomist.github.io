    "layer": [
      {
        "data": {
          "values": [
            {"y1": -0.03, "y2": 0.03}
          ]
        },
        "mark": {
          "type": "rect",
          "color": "rgb(198,198,198)",
          "opacity": 0.3
        },
        "encoding": {
          "x": {
            "field": "y1",
            "type": "quantitative"
          },
          "x2": {"field": "y2"}
        }
      },
      {
        "transform": [
