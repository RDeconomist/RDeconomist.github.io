{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
   
    "title": {
        "text": "Debt Interest Payments - UK",
        "subtitle":["Payments, billions",""],
        "subtitleFontStyle":"italic",
        "subtitleFontSize":10,
        "subtitleColor":"black",
        "anchor": "start",
        "color": "black"},
  
     "data": {"url": "https://raw.githubusercontent.com/RDeconomist/RDeconomist.github.io/refs/heads/main/data/debtExampleUKyAxis_longOneVariable.csv"},
   
    "mark": {
      "type":"bar",
      "clip":true,
      "color":"rgba(128,0,0,.8)",
      "size":20},
  
    "height":300,
    "width":300,
   
    "encoding": {
      "x": {
        "field": "Year", 
        "type": "temporal",
        "axis": {"title": null,"grid": false}
        },
  
      "y": {
        "field": "Value", 
        "type": "quantitative",
        "scale":{"domain":[32,45]},
        "axis": {
          "title": null,
          "grid": false}
        },
      
      "color": {
        "field": "Type", 
        "type": "nominal",
        "scale":{"range":["orange", "red"]}
       }
   }
}